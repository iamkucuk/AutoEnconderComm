{
	"name": "Easyvision LocalContainer",
	"context": "..",
	"dockerFile": "../Dockerfile",
    //"image": "selitvin/petastorm_ci",
	"runArgs": [
		"-v", "${env:HOME}${env:USERPROFILE}/.ssh:/root/.ssh-localhost:ro",
		"-v", "$(pwd):/workspace/",
		// "-v", "/media/ssd/dataset/visdrone:/data/VisDrone",
		// "-v", "/home/furkankucuk/Projects/detection-framework/easyvision/tests/test_data:/test_data",
		"-p", "8888:8888",
		"-e", "DISPLAY=${env:DISPLAY}",
		"--ipc", "host",
	],
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": "python",
		"python.linting.enabled": true,
		"python.linting.pylintEnabled": true,
		"python.linting.pylintPath": "pylint",
		"python.linting.pylintArgs": ["--extension-pkg-whitelist=cv2"],
		// "python.testing.unittestEnabled": true,
		"python.testing.nosetestsEnabled": true,
		"python.jediEnabled": false,
		"files.watcherExclude": {
			"**/.git/objects/**": true,
			"**/.git/subtree-cache/**": true,
			"**/data/*/**": true,
			"**/output/*/**": true,
		}
	},
	"postCreateCommand": "mkdir -p ~/.ssh && cp -r ~/.ssh-localhost/* ~/.ssh && chmod 700 ~/.ssh && chmod 600 ~/.ssh/*",
	"extensions": [
		"ms-python.python",
		"eamodio.gitlens",
		"njpwerner.autodocstring",
		"donjayamanne.python-extension-pack",
		"njqdev.vscode-python-typehint",
		"visualstudioexptteam.vscodeintellicode"
	],
	"workspaceMount": "src=/home/furkankucuk/Projects/detection-framework,dst=/workspace,type=bind",
	"workspaceFolder": "/workspace"
}
